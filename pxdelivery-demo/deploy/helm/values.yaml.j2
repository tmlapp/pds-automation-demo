# Values to be overriden by the user during deployment
  env:
    #KAFKA CONNECTION
    KAFKA_HOST: "{{ kafka_hostname }}"
    KAFKA_PASS: "{{ kafka_password }}"

    #MYSQL CONNECTION
    MYSQL_HOST: "{{ mysql_hostname }}"
    MYSQL_INIT_PASS: "{{ mysql_password }}"

    #MONGODB CONNECTION
    MONGO_HOST: "{{ mongo_hostname }}"
    MONGO_INIT_PASS: "{{ mongo_password }}"

    
    ## Less Frequently Used But Configurable ##
    
    KAFKA_PORT: 9092   
    MYSQL_PORT: 6446
    MONGO_PORT: 27017 
    MYSQL_USER: "porxie"
    MYSQL_PASS: "porxie" 
    KAFKA_USER: "pds"
    MONGO_INIT_USER: "pds"
    MYSQL_INIT_USER: "pds"
    MONGO_TLS: '""' # Should be empty set unless using AWS DocumentDB

  kafka_consumer:
    image:
      repository: jowings/pxconsumer
      tag: v2
    replicaCount: 1
    imagePullPolicy: Always

  pxdelivery:
    image:
      repository: jowings/pxdelivery
      tag: v2
    replicaCount: 1
    imagePullPolicy: Always
